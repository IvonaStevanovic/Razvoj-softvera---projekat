<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.raflab.studsluzbadesktopclient.controllers.DodajIspitModalController">

    <Label text="Dodavanje novog ispita" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Predmet:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboPredmet" prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nastavnik:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboNastavnik" prefWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Datum održavanja:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="datePicker" prefWidth="200" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Otkaži" onAction="#handleCancel"/>
        <Button text="Sačuvaj" onAction="#handleSave" styleClass="primary-button"/>
    </HBox>
</VBox>