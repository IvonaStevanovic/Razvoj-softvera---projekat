<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<HBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.raflab.studsluzbadesktopclient.controllers.StudProgramiPrikazController">

    <VBox spacing="10" prefWidth="250" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 0 1 0 0;">
        <padding>
            <Insets top="15" right="10" bottom="15" left="15"/>
        </padding>
        <Label text="Studijski Programi" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <ListView fx:id="listProgrami" VBox.vgrow="ALWAYS" />
    </VBox>

    <VBox spacing="15" HBox.hgrow="ALWAYS">
        <padding>
            <Insets top="15" right="15" bottom="15" left="10"/>
        </padding>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Predmeti na programu" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="+ Dodaj predmet" onAction="#handleOpenAddPredmetPopUp"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>

        <TableView fx:id="tablePredmeti" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colSifra" text="Šifra" prefWidth="100"/>
                <TableColumn fx:id="colNaziv" text="Naziv predmeta" prefWidth="300"/>
                <TableColumn fx:id="colEspb" text="ESPB" prefWidth="80"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-border-color: #4CAF50; -fx-border-radius: 5; -fx-padding: 10;">
            <Label text="Izveštaj o proseku ocena" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Od godine:"/>
                <TextField fx:id="txtGodinaOd" prefWidth="70" promptText="npr. 2020"/>

                <Label text="Do godine:"/>
                <TextField fx:id="txtGodinaDo" prefWidth="70" promptText="npr. 2026"/>

                <Separator orientation="VERTICAL" />

                <Button text="Prikaži u Pop-upu" onAction="#handleShowProsekPopUp"
                        style="-fx-background-color: #607D8B; -fx-text-fill: white;"/>

                <Button text="Štampaj PDF Izveštaj" onAction="#handleStampajIzvestaj"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;">
                    <tooltip>
                        <Tooltip text="Generiši PDF dokument sa statistikom"/>
                    </tooltip>
                </Button>
            </HBox>

            <Label fx:id="lblProsekRezultat" text="Izaberite predmet i raspon godina..." style="-fx-font-style: italic;"/>
        </VBox>
    </VBox>

</HBox>