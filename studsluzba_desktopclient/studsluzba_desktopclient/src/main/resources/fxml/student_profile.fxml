<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Font?>


<VBox fx:id="korenskiVBox" onKeyPressed="#handleKeyPressed" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.raflab.studsluzbadesktopclient.controllers.StudentController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10">
        <Button text="← Nazad na pretragu" onAction="#handleBack" style="-fx-font-weight: bold; -fx-cursor: hand;"/>
    </HBox>

    <TabPane fx:id="profilTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
            <Tab text="Osnovni podaci">
                <content>
                    <HBox alignment="CENTER" spacing="20">
                        <GridPane alignment="CENTER" hgap="10" vgap="10">
                            <Label text="Ime" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <TextField fx:id="imeTf" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Prezime" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <TextField fx:id="prezimeTf" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="JMBG" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <TextField fx:id="jmbgTf" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="Datum rođenja" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <DatePicker fx:id="datumRodjenjaDp" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        </GridPane>
                    </HBox>
                </content>
            </Tab>

            <Tab text="Indeks">
                <content>
                    <VBox alignment="CENTER" spacing="15">
                        <GridPane alignment="CENTER" hgap="10" vgap="10">
                            <Label text="Broj indeksa" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <TextField fx:id="brojIndeksaTf" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Godina upisa" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <TextField fx:id="godinaUpisaTf" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        </GridPane>
                    </VBox>
                </content>
            </Tab>

            <Tab text="Ispiti">
                <content>
                    <VBox spacing="10">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                        <Label text="Položeni ispiti" style="-fx-font-weight: bold;"/>
                        <TableView fx:id="polozeniTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="predmetPolozioCol" text="Predmet" prefWidth="200"/>
                                <TableColumn fx:id="ocenaCol" text="Ocena" prefWidth="70"/>
                                <TableColumn fx:id="datumPolaganjaCol" text="Datum" prefWidth="100"/>
                            </columns>
                        </TableView>
                        <Separator/>
                        <Label text="Nepoloženi ispiti" style="-fx-font-weight: bold;"/>
                        <TableView fx:id="nepolozeniTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="predmetNepolozenCol" text="Predmet" prefWidth="200"/>
                                <TableColumn fx:id="espbNepolozenCol" text="ESPB" prefWidth="70"/>
                            </columns>
                        </TableView>
                    </VBox>
                </content>
            </Tab>

            <Tab text="Finansije">
                <content>
                    <VBox spacing="10">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                        <TableView fx:id="uplateTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="datumUplateCol" text="Datum" prefWidth="120"/>
                                <TableColumn fx:id="iznosCol" text="Iznos (RSD)" prefWidth="100"/>
                                <TableColumn fx:id="svrhaCol" text="Svrha" prefWidth="200"/>
                            </columns>
                        </TableView>
                    </VBox>
                </content>
            </Tab>
        </tabs>
    </TabPane>
</VBox>