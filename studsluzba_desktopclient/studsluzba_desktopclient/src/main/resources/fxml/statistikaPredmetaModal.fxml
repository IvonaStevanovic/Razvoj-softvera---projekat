<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" prefWidth="600" prefHeight="450" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.raflab.studsluzbadesktopclient.controllers.StatistikaPredmetaModalController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="lblNaslov" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Label fx:id="lblUkupanProsek" style="-fx-font-size: 14px; -fx-text-fill: #2e7d32;"/>

    <TableView fx:id="tableStatistika" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colIndeks" text="Indeks" prefWidth="100"/>
            <TableColumn fx:id="colStudent" text="Student" prefWidth="250"/>
            <TableColumn fx:id="colOcena" text="Ocena" prefWidth="80"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Zatvori" onAction="#handleClose" style="-fx-background-color: #607D8B; -fx-text-fill: white;"/>
    </HBox>
</VBox>